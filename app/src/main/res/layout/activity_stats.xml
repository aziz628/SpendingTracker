<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/Page_Container"
    tools:context=".activities.StatsActivity">

    <!-- Top Navigation -->

    <TextView
        android:id="@+id/header_title"
        style="@style/Page_Title"
        android:text="@string/stats_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />



    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintBottom_toTopOf="@id/navigation_include"
        >

        <LinearLayout
            android:id="@+id/content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Transactions Over Time Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_sm"
                app:cardBackgroundColor="@color/surface_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Graph Section Title -->
                    <TextView
                        android:id="@+id/line_chart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transactions_over_time_title"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Line Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/surface_card" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category Distribution Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_sm"
                app:cardBackgroundColor="@color/surface_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Chart Section Title -->
                    <TextView
                        android:id="@+id/pie_chart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_distribution_title"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Chart Toggle Buttons -->
                    <LinearLayout
                        android:id="@+id/chart_toggle_container"
                        style="@style/Toggle_Container_Half"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <ToggleButton
                            android:id="@+id/chart_toggle_income"
                            style="@style/Toggle_Button_Income"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:textOff="@string/toggle_income"
                            android:textOn="@string/toggle_income" />

                        <ToggleButton
                            android:id="@+id/chart_toggle_expense"
                            style="@style/Toggle_Button_Expense"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textOff="@string/toggle_expense"
                            android:textOn="@string/toggle_expense" />
                    </LinearLayout>

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@color/surface_card" />

                    <!-- Category Legend -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/legend_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        tools:visibility="visible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/navigation_include"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>