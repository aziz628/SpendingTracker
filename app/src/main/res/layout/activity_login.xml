<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activities.LoginActivity">

    <LinearLayout style="@style/Container_Auth_Main"
        tools:ignore="MissingConstraints"
        tools:paddingHorizontal="@dimen/spacing_lg">

        <FrameLayout style="@style/Logo_Wrapper">
            <ImageView
                android:id="@+id/logo_image"
                style="@style/Logo_Icon.Login"
                android:contentDescription="@string/app_name" />
        </FrameLayout>

        <TextView style="@style/Title_Centered.Login" />

        <TextView style="@style/Subtitle_Centered.Login" />

        <LinearLayout style="@style/Form_Container">
            <!-- tools text show error text for editor preview (don't render at runtime) -->
            <TextView
                android:id="@+id/login_form_error"
                style="@style/Error_Banner"
                tools:text="Email incorrect"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/login_email_input"
                style="@style/Input_Field"
                android:drawableStart="@drawable/ic_mail_outline"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/login_email_error"
                style="@style/Error_Text" />

            <EditText
                android:id="@+id/login_password_input"
                style="@style/Input_Field"
                android:drawableStart="@drawable/ic_lock_outline"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/login_password_error"
                style="@style/Error_Text" />

            <!--<TextView
                android:id="@+id/forgot_password_link"
                style="@style/Forgot_Password_Link" />
                -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                style="@style/Save_Button.Login" />

            <LinearLayout style="@style/Bottom_Link_Container">
                <TextView style="@style/Link_Text.NoAccount" />
                <TextView
                    android:id="@+id/signup_link"
                    style="@style/Link_Text.Action.SignUp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
