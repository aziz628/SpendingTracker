<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    android:layoutDirection="ltr"
    style="@style/Nav_Container">

    <ImageView
        android:id="@+id/nav_home"
        style="@style/Nav_Item.Default"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nav_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_categories"
        style="@style/Nav_Item.Default"
        android:src="@drawable/ic_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_transaction_button"
        app:layout_constraintStart_toEndOf="@id/nav_home"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Center ADD Button -->
    <FrameLayout
        android:id="@+id/add_transaction_button"
        style="@style/Nav_Add_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/Nav_Add_Icon"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <ImageView
        android:id="@+id/nav_stats"
        style="@style/Nav_Item.Default"
        android:src="@drawable/ic_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nav_profile"
        app:layout_constraintStart_toEndOf="@id/add_transaction_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_profile"
        style="@style/Nav_Item.Default"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_stats"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>